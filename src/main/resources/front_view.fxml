<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane stylesheets="@front.css" xmlns="http://javafx.com/javafx/17" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="tn.eduskool.controllers.FrontController">
    
    <top>
        <VBox spacing="0" styleClass="header-container">
            <HBox styleClass="main-nav" alignment="CENTER">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="30">
                    <Label styleClass="logo-text">
                        <text>EDU</text>
                    </Label>
                    <Label styleClass="logo-text-blue">
                        <text>SKOOL</text>
                    </Label>
                    <HBox spacing="20">
                        <Button text="Home" styleClass="nav-button" onAction="#navigateToHome"/>
                        <Button text="About" styleClass="nav-button" onAction="#navigateToAbout"/>
                        <Button text="Our Activities" styleClass="nav-button" onAction="#navigateToActivities"/>
                    </HBox>
                </HBox>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <StackPane fx:id="contentArea">
            <!-- Le contenu changera dynamiquement -->
        </StackPane>
    </center>
</BorderPane>