<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.eduskool.controllers.DashboardEtudiantController"
            stylesheets="@css/style.css">

    <top>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 15;" spacing="10" alignment="CENTER_LEFT">
            <Label fx:id="titleLabel" text="Dashboard Étudiant" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="🏠 Accueil" styleClass="nav-button"/>
            <Button fx:id="soumissionDevoirButton" text="📄 SoumissionsDevoir" styleClass="nav-button"/>
            <Button text="📚 Cours" styleClass="nav-button"/>
            <Button text="⚙️ Paramètres" styleClass="nav-button"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="mainContent" style="-fx-background-color: #ecf0f1;">
            <Label text="Bienvenue sur votre espace étudiant" style="-fx-font-size: 24px;"/>
        </StackPane>
    </center>

</BorderPane>
