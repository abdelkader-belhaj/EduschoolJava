<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ListeDevoirsController"
            prefHeight="600.0" prefWidth="1200.0"
            stylesheets="@/css/style.css">

    <!-- Top: En-tÃªte -->
    <top>
        <VBox spacing="8" styleClass="header-container">
            <Label text="Gestion des Devoirs" styleClass="header-label"/>
            <Separator styleClass="header-separator"/>
        </VBox>
    </top>

    <!-- Centre: Tableau -->
    <center>
        <TableView fx:id="devoirTable" styleClass="custom-table">
            <columns>
                <TableColumn text="ID" fx:id="idCol" prefWidth="60" styleClass="table-column centered-column"/>
                <TableColumn text="Titre" fx:id="titreCol" prefWidth="180" styleClass="table-column"/>
                <TableColumn text="Description" fx:id="descriptionCol" prefWidth="380" styleClass="table-column"/>
                <TableColumn text="Date Limite" fx:id="dateLimiteCol" prefWidth="160" styleClass="table-column centered-column"/>
                <TableColumn text="Fichier" fx:id="fichierCol" prefWidth="220" styleClass="table-column"/>
                <TableColumn text="Actions" fx:id="actionsCol" prefWidth="220" styleClass="table-column centered-column"/>
                <TableColumn text="Soumissions" fx:id="colAction" prefWidth="200" styleClass="table-column centered-column"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- Bottom: Boutons -->
    <bottom>
        <HBox styleClass="action-bar" spacing="15" alignment="CENTER">
            <Button text="Ajouter un devoir" onAction="#ouvrirAjoutDevoir"
                    styleClass="primary-button"
                    prefWidth="180" prefHeight="32"/>


        </HBox>
    </bottom>
</BorderPane>